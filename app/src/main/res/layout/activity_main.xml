        android:id="@+id/btnD2"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_margin="8dp"
        android:text="Dialog Box 2"/>
    <Button
        android:id="@+id/btnD3"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_margin="8dp"
        android:text="Dialog Box 3"/>
    <Button
        android:id="@+id/btnD4"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_margin="8dp"
        android:text="Dialog Box 4"/>

</LinearLayout>